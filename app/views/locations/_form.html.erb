<%= form_for(@location || Location.new, html: { class: "form-horizontal" }) do |f| %>

          <%= f.hidden_field :address %>
          <%= f.hidden_field  :location_name %>
          <%= f.hidden_field  :phone_number %>
          <%= f.hidden_field  :district %>
          <%= f.hidden_field  :postcode %>
          <%= f.hidden_field  :city %>
          <%= f.hidden_field  :country %>
          <%= f.hidden_field  :lat %>
          <%= f.hidden_field  :lng %>

  <div class="form-group">
  <%= label_tag :search, "Address", class: "string" %>
  <%= text_field_tag :location_search, nil, class: "span12 search-query form-control", type: "search" %>
  </div>

  <div class="modal-footer">
  <%= f.submit "Create User", class: 'btn-success btn' %>
  </div>
      <%= render partial: "googlemap" %>

<% end %>
